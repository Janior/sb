<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<h1>Nuevo Post</h1>
			<%= form_for @posts do |f| %>
				<div class="form-group">
					<%= f.text_field :titulo, class: "form-control input-lg", placeholder: "Ingresa titulo" %>
				</div>
				<div class="form-group">
					<%= f.text_area :cuerpo, class: "form-control input-lg", placeholder: "Ingresa cuerpo" %>
				</div>
				<div>
					<%= f.submit "Crear post", class: "btn btn-primary btn-lg" %>
				</div>
			<% end %>
		</div>
	</div>
</div>