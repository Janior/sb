<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<h1>Posts</h1>
			<div  class="text-right">
				<%= link_to "Publicar Post", new_post_path, class: "btn btn-primary" %>
			</div>
			<table class="table">
				<tr>
					<th>Titulo</th>
					<th>Cuerpo</th>
					<th></th>
				</tr>
				<% @posts.each do |post| %>
				<tr>
					<td> <%= link_to  post.titulo, post %> </td>		
					<td> <%= post.cuerpo %> </td>
					<td> <%= link_to "Editar", edit_post_path(post) %> </td>
				</tr>
				<% end %>
			</table>			
		</div>
	</div>
</div>